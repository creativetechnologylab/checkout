extends ../../../src/views/base.pug

block prepend title
	- title = "Insurance Report"
	- heading = title

block contents
	form( method="post" )
		.form-group.row
			label( for="min_value" ).col-lg-2.col-form-label Minimum value
			.col-lg-4
				.input-group
					.input-group-prepend
						.input-group-text &pound;
					input( name="min_value" type="number" step="0.01" value=100 )#min_value.form-control
		.form-group.row
			label(for="format").col-lg-2.col-form-label Format
			.col-md-4
				select(name="format")#format.form-control
					option(value='tsv') TSV
					option(value='csv') CSV
		.form-group.row
			.col-lg-4.offset-lg-2
				button( type="submit" ).btn.btn-primary Download
