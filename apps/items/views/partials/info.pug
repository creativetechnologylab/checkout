.row
	.col-md-4
		.row
			.col-md-5.font-weight-bold.text-md-right Status
			.col-md-7: +status( item.loanable ? item.status : 'unavailable' )
			if item.owner_id
				.col-md-5.font-weight-bold.text-md-right Owner
				.col-md-7: +user( item.owner_name, item.owner_id )
			if item.status == 'on-loan'
				.col-md-5.font-weight-bold.text-md-right Issued
				.col-md-7: +fulldate( item.issued )
				.col-md-5.font-weight-bold.text-md-right Due
				.col-md-7: +relative( item.due, true )
			if item.audited
				.col-md-5.font-weight-bold.text-md-right Last audited
				.col-md-7: +relative( item.audited )
	.col-md-4
		.row
			.col-md-5.font-weight-bold.text-md-right Barcode
			.col-md-7: +clipboard(item.barcode)
			if item.serialnumber
				.col-md-5.font-weight-bold.text-md-right Serial number
				.col-md-7: +clipboard(item.serialnumber)
			if item.value
				.col-md-5.font-weight-bold.text-md-right Value
				.col-md-7 Â£#{item.value}
			if item.notes
				.col-md-5.font-weight-bold.text-md-right Notes
				.col-md-7=item.notes
	.col-md-4
		.row
			.col-md-5.font-weight-bold.text-md-right Location
			.col-md-7: +location(item.location_name, item.location_id)
			if item.group_id
				.col-md-5.font-weight-bold.text-md-right Group
				.col-md-7: +group(item.group_name, item.group_id)
			if item.department_id
				.col-md-5.font-weight-bold.text-md-right Department
				.col-md-7: +department(item.department_name, item.department_id)
