extends ../../../src/views/base.pug

block prepend title
	- title = 'Remove Reservation'
	- heading = "Are you sure you want to remove this reservation?"
	- breadcrumb.push({name: title})
	- menu = 'reservations'

block contents
	form( method="post" )
		+csrf
		.form-group.row
			.col-lg-4
				button( type='submit' ).btn.btn-danger Yes, remove reservation
				|  
				a( href="/reservations" ).btn.btn-outline-secondary Cancel
