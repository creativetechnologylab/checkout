if breadcrumb && breadcrumb.length > 0
	nav(aria-label="breadcrumb").mt-3
		ol.breadcrumb.mb-0
			li.breadcrumb-item: a(href="/")
				span.fas.fa-house
			each crumb, c in breadcrumb
				if crumb.url && c < breadcrumb.length - 1
					li.breadcrumb-item: a(href=crumb.url)=crumb.name
				else
					li.breadcrumb-item.active(aria-current="page")=crumb.name