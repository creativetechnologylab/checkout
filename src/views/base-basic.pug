doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="initial-scale=1.0, width=device-width, shrink-to-fit=no")
		link(rel="shortcut icon" href="/imgs/favicon.ico")
		block title
			title #{title}
		block head
			block css
				link(rel="stylesheet", href="/bootstrap/css/bootstrap.min.css")
				link(rel="stylesheet", href="/tempusdominus/css/tempusdominus-bootstrap-4.min.css")
				link(rel="stylesheet", href="/css/style.css")
				link(rel="stylesheet", href="/fontawesome/css/solid.min.css")
				link(rel="stylesheet", href="/fontawesome/css/all.min.css")
			block js
	body
		nav.navbar.navbar-expand-md.sticky-top.p-0.shadow.bg-dark.navbar-dark
			a(href="/").navbar-brand.col-md-3.col-lg-2.me-0.px-3.d-flex.align-items-center
				img(src="/imgs/icon.svg" width="22" height="22")
				span.me-2.align Checkout
			.navbar-nav.me-auto
				a(href="/logout").nav-link.me-2 Logout
		div.container-fluid
			.row
				nav#sidebarMenu.col-md-3.col-lg-2.d-md-block.bg-light.sidebar.collapse
					.sidebar-sticky.pt-3
						ul.nav.flex-column
							li.nav-item
								a.nav-link(href="/")
									span.me-2.fa.fa-arrow-left
									| Back

				main.col-md-9.me-sm-auto.col-lg-10.px-md-4
					.row
						.col-12.pt-3
							block header
								.d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
									h1.h2=heading
						.col-12
							block contents
